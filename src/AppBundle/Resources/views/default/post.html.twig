{% extends 'base.html.twig' %}

{% block body %}
	<section id="home">	
		<div id="main-slider" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">
				<div class="item active">
					<img class="img-responsive" src="{{ asset('bundles/app/images/slider/bg4.jpg') }}" alt="slider">
				</div>
			</div>
		</div>    	
    </section>
	<!--/#home-->

	
	<section id="post">
		<div id="twitter-feed" class="carousel slide" data-interval="false">
			<div class="row">
				<div class="post col-md-12">
					<h1>{{ blogpost.title }}</h1>
					<p id="contenu">
						{{ blogpost.content|raw }}
					</p>
					<p id="date">
						Publié le : {{ blogpost.date|date("d/m/Y") }} par {{ blogpost.author }}
						<br/>
						Mis à jour le : {{ blogpost.updated|date("d/m/Y") }}
					</p>
					<p id="panel-buttons">
						<a href="{{ path('modify', {'id': blogpost.id}) }}" id="update"><span class="glyphicon glyphicon-pencil"></span> Modifier</a><a href="{{ path('remove', {'id': blogpost.id}) }}" id="delete"><span class="glyphicon glyphicon-remove"></span> Supprimer</a>
					</p>

				</div>
				{#
				<div class="item">
					<img src="https://pbs.twimg.com/profile_images/443336758403424256/U5bzXI5l.jpeg" alt="">
					<p>Creator of the PHP framework Symfony</p>
					<a href="https://twitter.com/fabpot">Twitter account</a>
				</div>
				#}
			</div>
		</div>		
	</section><!--/#twitter-feed-->
{% endblock %}
